<BoxLayout>
    orientation: 'vertical'
    size: root.width, root.height
    padding: 20
    canvas.before:
        Color:
            rgba: (0.18, 0.31, 0.31, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos

<HorBoxLayout@BoxLayout>
    orientation: 'horizontal'
    padding: 5

<MyButton@Button>
    halign: 'center'
    valign: 'middle'
    size_hint: (0.5, 1)
    size: self.size
    pos_hint_x: {'center_x': 0.5}
    color: (1, 0, 0)
    background_color: (0.5, 0, 0, 1)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (1, 0, 0, 1)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<TabbedPanelItem>
    background_color: (0.18, 0.31, 0.31, 1)
    background_normal: ''
    color: (1, 1, 1, 1)

<Label>
    font_size: '15sp'
    color: (1, 1, 1, 1)
    text_size: self.size
    markup: True 

<HeadLabel@Label>
    halign: 'center'

<Spinner@Spinner>
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    size_hint: (1.5, 1)
    pos_hint: {'right': 1, 'center_y': 0.5}
    background_color: (0.18, 0.31, 0.31, 1)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<TextInput>
    multiline: 'False'
    halign: 'center'
    valign: 'middle'
    size_hint: (1.5, 1)
    pos_hint: {'left': 0, 'center_y': 0.5}
    background_color: (0.18, 0.31, 0.31, 1)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<DscrTextInput@TextInput>
    multiline: True

<Container>
    halign: 'center'
    valign: 'middle'
    padding: 10
    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    do_default_tab: False

    TabbedPanelItem:
        text: 'Начать'
        BoxLayout:
            HeadLabel:
                text: '[b]Электронный журнал[/b]\nинженерно-геологических скважин'
            Label:
                text: 'Для начала записи - НАЧАТЬ. Будет создан либо откроется эксель-файл.'
            Label:
                text: 'После заполнения данных по скважине - ВВЕСТИ. Данные зафиксируются на третьей вкладке.'
            Label:
                text: 'При необходимости добавить образец - ввести только данные о новом образце, остальное оставить.'
            Label:
                text: 'При необходимости добавить ИГЭ - ввести только данные о новом ИГЭ, остальное оставить.'
            Label:
                text: 'После проверки - ЗАПОМНИТЬ. Данные будут записаны в эксель-файл.'
            HorBoxLayout:
                MyButton:
                    id: btn_start
                    text: 'НАЧАТЬ'
                    on_release: root.start()
    
    TabbedPanelItem:
        text: 'Ввести'
        BoxLayout:
            HorBoxLayout:
                Label:
                    text: 'No объекта'
                TextInput:
                    id: obj_nm
            HorBoxLayout:
                Label:
                    text: 'No скважины'
                TextInput:
                    id: bore_nm
            HorBoxLayout:
                Label:
                    text: 'Дата проходки'
                TextInput:
                    id: bore_date
            HorBoxLayout:
                Label:
                    text: 'Абс. отметка'
                TextInput:
                    id: bore_abs
            HorBoxLayout:
                Label:
                    text: 'Глуб. скважины'
                TextInput:
                    id: bore_depth
            HorBoxLayout:
                Label:
                    text: 'Глуб. кровли ИГЭ'
                TextInput:
                    id: layer_roof
            HorBoxLayout:
                Label:
                    text: 'Описание ИГЭ'
                DscrTextInput:
                    id: layer_descr
            HorBoxLayout:
                Label:
                    text: 'Вид образца'
                Spinner:
                    id: sample_type
                    text: 'Вид образца'
                    values: 'монолит', 'нарушенный', 'коррозия', 'вода'
            HorBoxLayout:
                Label:
                    text: 'Глуб. образца'
                TextInput:
                    id: sample_depth
            HorBoxLayout:
                Label:
                    text: 'Глуб. подошвы ИГЭ'
                TextInput:
                    id: layer_depth
            HorBoxLayout:
                MyButton:
                    id: btn_bore
                    text: 'ВВЕСТИ'
                    on_release: root.submit()
              
    TabbedPanelItem:
        text: 'Запомнить' 
        BoxLayout:
            Label:
                id: lbl_obj_nm
                text: 'Номер объекта'
            Label:
                id: lbl_bore_nm
                text: 'Номер скважины'
            Label:
                id: lbl_bore_date
                text: 'Дата проходки'
            Label:
                id: lbl_bore_abs
                text: 'Абс. отметка'
            Label:
                id: lbl_bore_depth
                text: 'Глубина скважины'
            Label:
                id: lbl_layer_roof
                text: 'Глубина кровли ИГЭ'
            Label:
                id: lbl_layer_descr
                text: 'Описание ИГЭ'
            Label:
                id: lbl_sample_type
                text: 'Вид образца'
            Label:
                id: lbl_sample_depth
                text: 'Глубина образца'
            Label:
                id: lbl_layer_depth
                text: 'Глубина ИГЭ'
            HorBoxLayout:
                MyButton:
                    id: btn_submit
                    text: 'ЗАПОМНИТЬ'
                    on_release: root.write()